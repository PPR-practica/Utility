<Window x:Class="Utility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="402" Width="525">
    <Grid>
        <Button x:Name="Open" Content="Open" HorizontalAlignment="Left" Margin="66,205,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click" Height="100" Background="#FF971313" Foreground="White" FontFamily="MV Boli" RenderTransformOrigin="0,0">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-15"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Effect>
                <DropShadowEffect ShadowDepth="40" Direction="325" Color="#FF9B5858"/>
            </Button.Effect>
        </Button>
        <TextBox Height="109" Margin="169,45,168,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" Background="#FF971313" Foreground="#FFF7F0F0" Text="aleluia" FontFamily="MV Boli" FontSize="20" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-15"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
            <TextBox.Effect>
                <DropShadowEffect ShadowDepth="40" Color="#FF9B5858"/>
            </TextBox.Effect>
        </TextBox>
        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="228,205,0,0" VerticalAlignment="Top" Width="100" Height="100" Background="#FF971313" FontFamily="MV Boli" RenderTransformOrigin="0.5,0.5" Foreground="White">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-15"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Effect>
                <DropShadowEffect ShadowDepth="40" Color="#FF9B5858" Direction="325"/>
            </Button.Effect>
        </Button>

    </Grid>
</Window>